{
  "manifest_version": 2,
  "name": "Sigil",
  "version": "1.0.0",
  "description": "Firefox Addon: Send prompts to multiple Claude.ai tabs simultaneously",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "cookies",
    "contextualIdentities",
    "tabHide",
    "https://claude.ai/*",
    "https://*.claude.ai/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["serviceWorker.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://*.claude.ai/*",
        "*://*.claude.ai/*"
      ],
      "js": ["claude-content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "sidebar_action": {
    "default_panel": "sidebar.html",
    "default_title": "Claude Assistant",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    },
    "browser_style": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Claude Assistant",
    "default_icon": {
      "16": "icon-16.png",
      "48": "icon-48.png",
      "128": "icon-128.png"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "applications": {
    "gecko": {
      "id": "claude-assistant@example.com",
      "strict_min_version": "109.0"
    }
  }
}
